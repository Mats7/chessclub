{% extends 'homepage/home.html.twig' %}

{% block content %}
    <div class="row justify-content-center">
        <div class="col-6 bg-dark text-white">
            <form name="profileData" action="{{ path('app_profile_save') }}" method="post">
                {% if app.user %}
                <div class="mb-5">
                <h1 class="h3 mb-2 font-weight-normal">Personal info</h1>
                    <label class="mt-3 mb-2" for="username">Nick</label>
                    <input id="inputNick" name="inputNick" type="text" value="{{ nick }}" class="form-control">
                    
                    <label class="mt-3 mb-2" for="email">Email</label>
                    <input id="inputEmail" name="inputEmail" type="email" value="{{ email }}" class="form-control">
                    
                    <label class="mt-3 mb-2" for="phone">Phone number</label>
                    <input id="inputPhone" name="inputPhone" type="text" value="{{ phone }}" class="form-control">
                    
                    <label class="mt-3 mb-2" for="number">Wins</label>
                    <input id="inputWins" type="number" value="{{ wins }}" class="form-control" disabled>

                    <label class="mt-3 mb-2" for="number">Defeats</label>
                    <input id="inputDefeats" type="number" value="{{ defeats }}" class="form-control" disabled>

                    <label class="mt-3 mb-2" for="number">Winrate for whites</label>
                    <input id="inputWhiteWR" type="number" value="{{ whiteWr }}" class="form-control" disabled>

                    <label class="mt-3 mb-2" for="number">Winrate for blacks</label>
                    <input id="inputBlackWR" type="number" value="{{ blackWr }}" class="form-control" disabled>
                    
                    <label class="mt-3 mb-2" for="password">Password</label>
                    <input id="inputPassword" name="inputPassword" id="input" type="password" class="form-control">

                    <label class="mt-5" for="datetime">Date Joined: {{ dateJoined|date('d-m-Y') }}</label>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    
                    <div class="mt-5">
                        <button id="save-button" class="btn btn-secondary text-white" type="submit">
                            Save
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    {% endif %}
    
    {% if not app.user %}
        <h1 class="h3 mb-3 font-weight-normal">You don't have access to this page :(</h1>
        <button id="profile-register" class="btn btn-secondary text-white mt-2" type="link">
            <a class="text-decoration-none text-dark" href="{{ path('app_login') }}">Sign In</a>
        </button>
    {% endif %}

{% endblock %}
