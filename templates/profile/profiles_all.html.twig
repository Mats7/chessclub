{% extends 'homepage/home.html.twig' %}

{% block content %}
    <div class="row justify-content-center">
        <div class="col-6 bg-dark text-white">
            <div class="mb-5">
                <h1 class="h3 mb-2 font-weight-normal">Chess Club Users</h1>
                {% for a in profiles %}
                    <div class="mt-5 userbox">
                        <label class="mt-2" for="username">Nickname:</label>
                        <h4 class="mt-2" for="username">{{a.nick}}</h3>

                        {% if app.user %}
                            <label class="mt-2" for="email">Email:</label>
                            <h4 class="mt-2" for="email">{{a.email}}</h3>
                        {% endif %}
                        
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
